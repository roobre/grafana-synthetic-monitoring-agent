{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':semanticCommitsDisabled',
  ],
  enabledManagers: [
    'custom.regex',
  ],
  customManagers: [
    {
      customType: 'regex',
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'grafana/k6',
      fileMatch: [
        '.*\\.mk',
      ],
      matchStrings: [
        'K6_VERSION(\\s*):=(\\s*)(?<currentValue>.+)(\\s*)$',
      ],
    },
  ],
}
